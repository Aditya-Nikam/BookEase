<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:context=".ui.view.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Section: Recommended -->
        <TextView
            android:text="Recommended for you"
            style="@style/SectionTitle" />

        <TextView
            android:text="Handpicked based on your reading preferences."
            style="@style/SectionSubtitle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRecommended"
            style="@style/HorizontalRecyclerStyle" />

        <!-- Section: New Releases -->
        <TextView
            android:text="New Releases"
            style="@style/SectionTitle" />

        <TextView
            android:text="Newly released books spanning various genres."
            style="@style/SectionSubtitle" />

        <!-- Section: Science -->
        <TextView
            android:text="Science"
            style="@style/SectionTitle" />

        <TextView
            android:text="Explore the wonders of science and discovery."
            style="@style/SectionSubtitle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerscience"
            style="@style/HorizontalRecyclerStyle" />

        <!-- Section: History -->
        <TextView
            android:text="History"
            style="@style/SectionTitle" />

        <TextView
            android:text="Dive into historical events and civilizations."
            style="@style/SectionSubtitle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerhistory"
            style="@style/HorizontalRecyclerStyle" />

        <!-- Section: Biography -->
        <TextView
            android:text="Biography"
            style="@style/SectionTitle" />

        <TextView
            android:text="Read about inspiring lives and achievements."
            style="@style/SectionSubtitle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerbiography"
            style="@style/HorizontalRecyclerStyle" />

        <!-- Section: Art -->
        <TextView
            android:text="Art"
            style="@style/SectionTitle" />

        <TextView
            android:text="Aesthetic and creative expressions in visual form."
            style="@style/SectionSubtitle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerart"
            style="@style/HorizontalRecyclerStyle" />

        <!-- Section: Philosophy -->
        <TextView
            android:text="Philosophy"
            style="@style/SectionTitle" />

        <TextView
            android:text="Explore thoughts, existence, and reasoning."
            style="@style/SectionSubtitle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerphilosophy"
            style="@style/HorizontalRecyclerStyle" />

        <!-- Section: Self-Help -->
        <TextView
            android:text="Self-Help"
            style="@style/SectionTitle" />

        <TextView
            android:text="Grow, motivate, and empower yourself."
            style="@style/SectionSubtitle" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerselfhelp"
            style="@style/HorizontalRecyclerStyle" />
    </LinearLayout>
</ScrollView>
